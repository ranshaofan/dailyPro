/* page/addType/addType.wxss */
@import "../common/index.wxss";
.page{
    background: linear-gradient(to bottom,#efefef,#efefef,#fff0fd);
    padding: 2vw 5vw 5vw 5vw;
    box-sizing: border-box;
}
.inputType input{
    font-size: 18px;
    padding: 0 3vw;
    box-sizing: border-box;
    font-weight: 700;
    color: #2a0f4f;
    width: auto;
}
.inputType{
    width: 100%;
    height: 10%;
    margin-bottom: 5vw;
    box-sizing: border-box;
    border-bottom: 2px solid #6710a142;
}
.picsView{
    width: 100%;
    height: 90%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.imgView{
    width: 50px;
    height: 50px;
    border-radius: 40px;
    border: 1px solid #70707042;
    background-color: #fff;
    margin-right: 3vw;
    overflow: hidden;
  }
  .imgView image{
    width: 34px;
    height: 34px;
  }