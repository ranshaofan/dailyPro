}

.beginBtn {
  padding: 0 10px;
  margin: 20px 40px 0 40px;
  color: aliceblue;
  height: 40px;
  background-color: #acbff4;
  background: linear-gradient(to left top, #d2acf4, #9b6bd1,#5d199d);
  border-radius: 15px;
  border: 1px solid #dedddd;
  font-size: 20px;
  font-weight: 700;
}

.page {
  padding: 0;
}

.mark {
  position: fixed;
  left: -1px;
  /* bottom: 50px; */
}

.mark0 {
  bottom: 100px;
}

.mark1 {
  bottom: 50px;
}

.mark image {
  width: 35px;
  height: 98px;
}

/* 扇形图模块 */
.chart {
  width: 90vw;
  height: 90vw;
  margin: 0 5vw;
  border-radius: 28px;
  box-sizing: border-box;
  box-shadow: 0px 0px 10px rgba(141, 8, 245, 0.16);
}

.fanChart {
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.anaCanvas {
  width: 100%;
  height: 100%;
}

.canvasbox {
  width: 66%;
  height: 66%;
}

.FanTxtBox {
  width: 100%;
  height: 34%;
  padding: 0px 20px;
  box-sizing: border-box;
}

.psCircle {
