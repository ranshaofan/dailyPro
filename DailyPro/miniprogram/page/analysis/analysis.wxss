  justify-content: center;
  align-items: center;
  margin: 10px 0 10px 0;
}

.analysisTitlespan {
  margin-right: 20px;
  color: #4d226d;
  font-size: 24px;
  font-weight: 700;
  /* font-style: italic; */
}
.timepicker {
  color: #3D1467;
  background-color: #fff;
  border: 2px solid #3D1467;
  border-radius: 8px;
  padding: 0 10PX;
