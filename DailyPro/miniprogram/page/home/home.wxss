@import "../common/index.wxss";
.homePage{
  background: linear-gradient(#fff ,#fff,#fff,rgb(246,234,227));
}
/**begin**/
.begin{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 15%;
}
.beginLeft{
  width: 70%;
}
.title{
  color: #15399C;
  font-size: 20px;
  font-weight: 700;
}
.name{
  color: #4A4D4C;
  font-size: 17px;
}
.beginRImg{
  width:30%;
  height: 100%;
}
.beginRImg image{
  width: 100%;
  opacity: 0.2;
  /* object-fit: contain; */
  /* object-position: center; */
}
/* task & cost开始 */
.task{
  margin-bottom: 30px;
}
.tctitle{
  position: relative;
  height: 30px;
  margin-bottom: 30px;
}
.taskTitleLeft,.costTitleLeft{
  position: absolute;
  left: 0;
  top: 0;
  font-size: 19px;
  font-weight: 700;
}
.taskTitleAdd,.costTitleAdd{
  position: absolute;
  right: 0;
  top: 0;
  width: 32px;
  height: 32px;
  line-height: 30px;
  border-radius: 9px;
  font-size: 25px;
  border: 0.2px solid #70707042;
  text-align: center;
}
.taskView{
  white-space: nowrap;
}
.taskBox{
  position: relative;
  width: 40%;
  height: 180px;
  border-radius: 9px;
  margin-right: 20px;
  display: inline-block;
  padding: 14px;
  box-sizing: border-box;
}
.taskBoxColor1,.costBoxColor2{
  background-color: #FFEEE7;
}
.taskBoxColor2,.costBoxColor3{
  background-color: #EFFAF7;
}
.taskBoxColor3,.costBoxColor4{
  background-color: #F1F1F1;
}
.costBoxColor1{
  background-color: #E9E4F2;
}
.tasktype,.costtype{
  color: #3D1467;
  font-size: 16px;
  font-weight: 700;
  margin-bottom: 3px;
}
.taskcon,.costcon{
  font-size: 13px;
  color: #655B6F;
}
.taskbgc{
  width: 100%;
  height: 80px;
  position: absolute;
  bottom: 0;
  left: 0;
}
.taskpics{
  position: absolute;
  bottom: 24px;
  height: 30px;
}
.taskpics view{
  position: absolute;
  top: 0;
  width: 40px;
  height: 40px;
  background-color: #fff;
  border-radius: 20px;
}
.taskpics image{
  width: 32px;
  height: 30px;
}
.moreImgView image{
  width: 3px;
  height: 13px;
}
.costTxt{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 16px;
}
