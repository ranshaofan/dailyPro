@import "../common/index.wxss";
.tcpage{
    background: linear-gradient(#fff ,#fff,#fff,rgb(248, 241, 230));
  }
/**按钮**/
#tcAddBtn{
    width: 80vw;
    height: 47px;
    color: #fff;
    border-radius: 11px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(to right,#7857D2 ,#C6A8E8);
}
#tcAddBtn image{
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    margin: 0 !important;
}
/* task竖条 */
.vBar{
    width: 10%;
    position: absolute;
    top: 0;
    left: -10px;
}
.beginCircle span{
    display: inline-block;
}
.beginCOut{
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 4px solid #861883;
    position: relative;
}
.beginCIn{
    position: absolute;
    margin: auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #861883;
}
.stickBox{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.stick{
    display: inline-block;
    width: 3px;
    height: 68px;
    margin: 10px 0;
    background-color: #861883;
    border-radius: 20px;
}
.bcircle{
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: 3px solid #861883;
    position: relative;
}
.taskView{
    display: flex;
    justify-content: center;
    align-items: flex-start;
    position: relative;
}
.taskList{
    width: 90%;
    position: absolute;
    right: 0;
}
.bg0{
    background-color: #FFEEE7;
}
.bg1{
    background-color: #F9EFF7;
}
.bg2{
    background-color: #EFFAF7;
}
.bg3{
    background-color: #F1F1F1;
}
.taskbox{
    border-radius: 18px;
    height: 78px;
    margin-bottom: 20px;
    padding: 10px;
    /* width: 100%; */
    /* position: absolute; */
    /* left: 0; */

}
.tbtop{
    position: relative;
    height: 24px;
}
.tbtopLeft{
    position: absolute;
    left: 0;
    top: 0;
    color: #3D1467;
    font-size: 19px;
    font-weight: 700;
}
.tbtopRight{
    position: absolute;
    right: 0;
    top: 0;
    font-size: 14x;
    color: #89868C;
}
.tbCon{
    height: 24px;
    font-size: 14x;
    color: #89868C;
}
.mark{
    position: fixed;
    left: -1px;
    z-index: 99;
    /* bottom: 50px; */
}
.mark0{
    bottom: 100px;
}
.mark1{
    bottom: 50px;
}
.mark image{
    width: 35px;
    height: 98px;
}
/* cost */
.costCard{
    width: 100%;
    height: 97px;
    background: linear-gradient(45deg,#8675D6 ,#9E91D9,#CFC4FE,#B2A3F8);
    border-radius: 11px;
    position: relative;
}
.cardBtn{
    background-color: #7857D2;
    position: absolute;
    right: 10px;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 88px;
    height: 80px;
    border-radius: 32px;
    box-shadow: 1px 1px 2px #1D1D1D;
    color: #fff;
    font-size: 13px;
    font-style: italic;
}
.cardLeft{
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
    box-sizing: border-box;
}
.cardType{
    font-size: 12px;
    font-weight: 700;
    color: #F0F0F1;
}
.total{
    font-size: 17px;
    font-weight: 700;
    color: #FEFEFF;
}
.limit{
    font-size: 10px;
    font-style: italic;
    color: #E7E7EB;
}
.titlecost{
    font-size: 19px;
    font-weight: 700;
    color: #5C5F5E;
    margin: 20px 0;
}
/* 弹框 */
.addDlg{
    position: fixed;
    top: 20%;
    background-color: #fff;
    z-index: 19961009;
    width: 80%;
    border-radius: 12px;
    border: 1px solid #541A69;
    box-shadow: rgba(146, 143, 146, 0.8) 5px 5px 5px;
}
.dlgTitle{
    position: relative;
    width: 100%;
    height: 50px;
    line-height: 50px;
    font-size: 15px;
    font-weight: 700;
    color: #fff;
    border-radius: 10px 10px 0 0;
    box-sizing: border-box;
    margin-bottom: 10px;
    background: rgba(74, 31, 74, 0.65);
}
.dlgTitle span{
    width: 30px;
    display: inline-block;
    position: absolute;
    right: 10px;
    font-weight: 700;
    font-style:normal;
    text-align: end;
}
.dlgName{
    position: absolute;
    left: 10px;
    top: 0;
    bottom: 0;
    margin: auto;
}
.dlgClose{
    position: absolute;
    right: 10px;
    top: 0;
    bottom: 0;
    margin: auto;
}
.addDlgTop .timepicker{
    width: 40%;
    height: 40px;
    border:1px solid #E7E7EB;
    background-color: #fcf7ff;
    border-radius: 5px;
    color: #777676;
}
.addDlgbottom{
    margin-top: 10px;
}
.addDlgbottom .typepicker{
    width: 30%;
    height: 40px;
    border:1px solid #E7E7EB;
    background-color: #fff;
    border-radius: 12px;
    color: #777676;
}
.eventTypePicker{
    width: 100%;
    height: 40px;
    line-height: 40px;
}
.addInput{
    height: 40px;
    border:1px solid #3D1560;
    background-color: #fff;
    border-radius: 12px;
    color: 3D1560;
    padding: 0 10px;
    box-sizing: border-box;
    font-size: 14px;
    width: 60%;
}
.addTaskInput{
    width: 60%;
}
.addBtn button{
    background-color: #896D89;
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    border: 1px solid #3D1560;
    border-radius: 12px;
}
.addEventDlgT span{
    width: 20%;
    display: inline-flex;
    justify-content: flex-end;
    align-items: center;
    background-color: #fff;
}
.addEventDlgT input{
    width: 40%;
}
.addDlgTimeBeizhu{
    width: 60%;
    height: 80px;
}
.delete{
    position: fixed;
    
}
.delete image{
    width: 60px;
    height: 40px;
}
.delCost{
    position: absolute;
    right: 0;
    background-color: rgb(158, 66, 140);
    height: 100%;
    width: 50px;
    font-size: 19px;
    color: #fff;
    border-radius: 0 16px 16px 0;
    z-index: 1;
}
.timepicker{
    color: #4F185A;
    background-color: #fff;
    border: 2px solid #4F185A;
    border-radius: 20px;
    padding: 0 10PX;
    height: 26px;
    line-height: 26px;
    font-size: 15px;
}
.timeDlgLine{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 10px;
}
.timeDlgLineName{
    color: #3D184C;
    font-size: 14px;
    margin-right: 14px;
}