@import "../common/index.wxss";

.tcpage {
    background: linear-gradient(#fff, #fff, #fff, rgb(239, 241, 255));
}

.tcpage2 {
    background: linear-gradient(#fff, #fff, #fff, rgb(253, 240, 255));
}

/**按钮**/
#tcAddBtn {
    width: 80vw;
    height: 47px;
    color: #fff;
    border-radius: 11px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(to right, #7857D2, #C6A8E8);
}

#tcAddBtn image {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    margin: 0 !important;
}

/* task竖条 */
.vBar {
    width: 10%;
    position: absolute;
    top: 0;
    left: -10px;
}

.beginCircle span {
    display: inline-block;
}

.beginCOut {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 4px solid #861883;
    position: relative;
}

.beginCIn {
    position: absolute;
    margin: auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #861883;
}

.stickBox {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.stick {
    display: inline-block;
    width: 3px;
    height: 68px;
    margin: 10px 0;
    background-color: #861883;
    border-radius: 20px;
}

.bcircle {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: 3px solid #861883;
    position: relative;
}

.taskView {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    position: relative;
}

.taskList {
    width: 90%;
    position: absolute;
    right: 0;
}

.bg0 {
    background-color: #FFEEE7;
}

.bg1 {
    background-color: #F9EFF7;
}

.bg2 {
    background-color: #EFFAF7;
}

.bg3 {
    background-color: #F1F1F1;
}

.taskbox {
    border-radius: 18px;
    height: 78px;
    margin-bottom: 20px;
    padding: 10px;
    position: relative;
    z-index: 2;
    /* width: 100%; */
    /* position: absolute; */
    /* left: 0; */

}

.tbtop {
    position: relative;
    height: 24px;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}

.tbtopLeft {
    color: #3D1467;
    font-size: 19px;
    font-weight: 700;
}

.tbtopRight {
    font-size: 14x;
    color: #89868C;
    margin-bottom: 5px;
}

.tbright {
    position: absolute;
    right: 0px;
    top: 0px;
}

.tbCon {
    width: 60%;
    height: 50px;
    font-size: 14x;
    color: #89868C;
    margin-top: 8px;
    white-space: normal;
    overflow: scroll;
}

.mark {
    position: fixed;
    left: -1px;
    z-index: 99;
    /* bottom: 50px; */
}

.mark0 {
    bottom: 100px;
}

.mark1 {
    bottom: 50px;
}

.mark image {
    width: 35px;
    height: 98px;
}

/* cost */
.costCard {
    width: 100%;
    height: 97px;
    background: linear-gradient(45deg, #8675D6, #9E91D9, #CFC4FE, #B2A3F8);
    border-radius: 11px;
    position: relative;
}

.cardBtn {
    background-color: #7857D2;
    position: absolute;
    right: 10px;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 88px;
    height: 80px;
    border-radius: 32px;
    box-shadow: 1px 1px 2px #1D1D1D;
    color: #fff;
    font-size: 13px;
    font-style: italic;
}

.cardLeft {
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
    box-sizing: border-box;
}

.cardType {
    font-size: 12px;
    font-weight: 700;
    color: #F0F0F1;
}

.total {
    font-size: 17px;
    font-weight: 700;
    color: #FEFEFF;
}

.limit {
    font-size: 10px;
    font-style: italic;
    color: #E7E7EB;
}

.titleevent {
    font-size: 19px;
    font-weight: 700;
    color: #5C5F5E;
    margin: 20px 0;
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 20px 0;
}

.epicker {}

.epicker picker {
    width: 100%;
}

.typeEventSelector {
    width: 80px;
}

.eventValueSelector {
    width: 80px;
}

.titleeventleft {
    position: absolute;
    left: 0;
}

.titleeventright {
    position: absolute;
    right: 0;
}

.eventspan {
    font-size: 16px;
    width: 70px;
    height: 100%;
}

/* 弹框 */
.addDlg {
    position: fixed;
    top: 20%;
    background-color: #fff;
    z-index: 19961009;
    width: 80%;
    border-radius: 12px;
    border: 1px solid #541A69;
    box-shadow: rgba(146, 143, 146, 0.8) 5px 5px 5px;
}

.dlgTitle {
    position: relative;
    width: 100%;
    height: 50px;
    line-height: 50px;
    font-size: 15px;
    font-weight: 700;
    color: #fff;
    border-radius: 10px 10px 0 0;
    box-sizing: border-box;
    margin-bottom: 10px;
    background: rgba(74, 31, 74, 0.65);
}

.dlgTitle span {
    width: 30px;
    display: inline-block;
    position: absolute;
    right: 10px;
    font-weight: 700;
    font-style: normal;
    text-align: end;
}

.dlgName {
    position: absolute;
    left: 10px;
    top: 0;
    bottom: 0;
    margin: auto;
}

.dlgClose {
    position: absolute;
    right: 10px;
    top: 0;
    bottom: 0;
    margin: auto;
}

.addDlgTop .timepicker {
    width: 40%;
    height: 40px;
    border: 1px solid #E7E7EB;
    background-color: #fcf7ff;
    border-radius: 5px;
    color: #777676;
}

.addDlgbottom {
    margin-top: 10px;
}

.addDlgbottom .typepicker {
    width: 30%;
    height: 40px;
    border: 1px solid #E7E7EB;
    background-color: #fff;
    border-radius: 12px;
    color: #777676;
}

.eventTypePicker {
    width: 100%;
    height: 40px;
    line-height: 40px;
}

.addInput {
    height: 40px;
    border: 1px solid #3D1560;
    background-color: #fff;
    border-radius: 12px;
    color: 3D1560;
    padding: 0 10px;
    box-sizing: border-box;
    font-size: 14px;
    width: 60%;
}

.addTaskInput {
    width: 60%;
}

.addBtn button {
    background-color: rgb(71 26 132 / 65%);
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    border: 1px solid #3D1467;
    border-radius: 12px;
}

.addEventDlgT span {
    width: 20%;
    display: inline-flex;
    justify-content: flex-end;
    align-items: center;
    background-color: #fff;
}

.addEventDlgT input {
    width: 40%;
}

.addDlgTimeBeizhu {
    width: 60%;
    height: 80px;
}

.delete {
    position: fixed;

}

.delete image {
    width: 60px;
    height: 40px;
}

.delCost {
    position: absolute;
    right: 0;
    top: 0;
    background-color: rgb(158, 66, 140);
    height: 100%;
    width: 80px;
    font-size: 19px;
    color: #fff;
    border-radius: 0 16px 16px 0;
    z-index: 1;
    padding-right: 20px;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.delCost image {
    width: 24px;
    height: 24px;
}

.timepicker {
    color: #3D1467;
    background-color: #fff;
    border: 2px solid #3D1467;
    border-radius: 8px;
    padding: 0 10PX;
    height: 26px;
    line-height: 26px;
    font-size: 15px;
}

.timeDlgLine {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 10px;
}

.timeDlgLineName {
    color: #3D1467;
    font-size: 14px;
    margin-right: 14px;
}

.timerangeView {
    padding: 0 0 10px 0;
}

.timerangeView picker {
    width: 40%;
    color: #3D1467;
    margin: 0 5px;
}

/*查询检索*/
.pickerFind {
    width: 80vw;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin: auto;
    height: 30px;
    margin-bottom: 3vw;
    display: flex;
}

.span {
    color: #3D1467;
    font-size: 18px;
    height: 30px;
    width: 70px;
}

.typepickerfind {
    width: 30%;
    height: 30px;
    border-radius: 10px;
    color: #3D1467;
    border: 2px solid #3D1467;
    margin-right: 10px;
}

.findinput {
    border-radius: 10px;
    color: #3D1467;
    border: 2px solid #3D1467;
    flex-grow: 1;
    height: 30px;
}

.findinput input {
    padding: 0 10px;
    box-sizing: border-box;
    color: #3D1467;
}

.taskdate {
    color: #ffffff;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 8px;
    width: 96px;
    text-align: center;
    border-radius: 20px;
    background-color: rgba(197, 185, 208, 0.5);
}

.costtype {
    color: #3d1467;
    font-size: 19px;
    font-weight: 700;
    margin-bottom: 4px;
}

.costdate {
    color: #ffffff;
    font-size: 13px;
    font-weight: 500;
    margin-left: 9px;
    width: 90px;
    text-align: center;
    border-radius: 20px;
    background-color: rgba(197, 185, 208, 0.5);
}

.costcon {
    font-size: 16px;
    width: 180px;
    height: 34px;
    color: #655B6F;
    white-space: normal;
    overflow: scroll;
}

.slotBoxW {
    position: relative;
