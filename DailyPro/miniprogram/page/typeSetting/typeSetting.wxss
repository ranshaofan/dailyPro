@import "../common/index.wxss";


.page {
    background: linear-gradient(to bottom, #efefef, #efefef, #fff0fd);
    padding: 0 !important;
}
.wrapblock{
    height: 56px;
    width: 100%;
    position: relative;
    box-sizing: border-box;
}
.boxLeft{
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
  }
.imgView{
    width: 40px;
    height: 40px;
    border-radius: 40px;
    border: 1px solid #70707042;
    background-color: #fff;
    margin-right: 3vw;
    overflow: hidden;
  }
  .imgView image{
    width: 28px;
    height: 28px;
  }
.item {
    display: flex;
    align-items: center;
    padding: 10rpx 30px;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;
    height: 56px;
    background-color: #fff;
    width: 100%;
}

.item-name {
    flex: 1;
    margin-left: 20px;
}
.item-name input{
    font-size: 18px;
    color: #4a2879;
}

.checkbox {
    width: 46rpx;
    height: 46rpx;
    /* border-radius: 50%; */
    border: 2px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
}

.checked {
    width: 24rpx;
    height: 24rpx;
    background-color: #33175b;
    /* border-radius: 50%; */
}

.unchecked {
    width: 24rpx;
    height: 24rpx;
    background-color: #fff;
    /* border-radius: 50%; */
}


.addType {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 20px;
    box-sizing: border-box;
    font-size: 21px;
    font-weight: 700;
    color: #33175b;
    background-color: #fff;
    box-shadow: 0 0 10px #e8a0ef;
}
.delCost{
    position: absolute;
    right: 0;
    background-color: rgb(158, 66, 140);
    width: 60px;
    font-size: 19px;
    color: #fff;
    height: 56px;
    top: 0;
  }